<?xml version="1.0" encoding="utf-8"?>
<higgs version="1" 
		xmlns:http="higgs:http" xmlns:ws="higgs:http.websocket" 
		xmlns:s2s="higgs:http.s2s" xmlns:xr="higgs:http.xmlrpc" 
		xmlns:telnet="higgs:telnet" xmlns:dav="higgs:http.dav">
	<using>app.higgs.handlers</using>
	<server class="HttpSessionHandler">
		<bind host="localhost" port="8800" />
		<ws:endpoint    uri="/top" handler="WebSocketHandler:top" />
		<http:endpoint  uri="/" basedir="/home/noccy/wwwshare" />
		<http:cache       backend="memcached" lifetime="30" />
		<http:sessions    dir="./session/" lifetime="60" />
		<dav:endpoint   uri="/" basedir="/home/noccy/wwwshare" />
		<xr:endpoint    uri="/xmlrpc" handler="XmlRpcHandler" />
		<s2s:endpoint   uri="/s2s" handler="S2SHandler" />
		<access>
			<allow from="127.0.0.1" />
			<deny from="all" />
		</access>
	</server>
	<server>
	<server class="TelnetSessionHandler">
		<bind host="localhost" port="8801" />
		<telnet:endpoint handler="TelnetHandler" />
		<access>
			<allow from="127.0.0.1" />
			<deny from="all" />
		</access>
	</server>
</higgs>
