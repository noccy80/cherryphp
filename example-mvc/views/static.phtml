                <div><input type="text"></div>
                <a href="#" onclick="$('overlay').addClassName('visible');">Overlays!</a>
            </div>
        </div>
    </div>
    <div id="paneltabs">
        <a class="current" href="#"><img src="/images/fugue/layout-3.png"></a>
        <a href="#"><img src="/images/fugue/images.png"></a>
        <a href="#"><img src="/images/fugue/color.png"></a>
        <a href="#"><img src="/images/fugue/gear.png"></a>
    </div>
</div>
