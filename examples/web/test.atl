html {
    head {
        title "ATL Test Page"
        link rel="stylesheet" type="text/css" href="/css/style.css"
    }
    body {
        h1 "Hello World"
        img src="/hello.jpg"
        p "This is a page written in ATL."
        // Comments translate to HTML too
        p "This is how you add {link} to the output" {
            link:a "a link" href="#"
        }
    }
}
